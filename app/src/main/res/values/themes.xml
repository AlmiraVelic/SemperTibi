<resources>
    <!-- Base application theme. -->
    <style name="Theme.SemperTibi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lotus_lightblue</item>
        <item name="colorPrimaryVariant">@color/lotus_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lotus_lightblue</item>
        <item name="colorSecondaryVariant">@color/anti_flash_white</item>
        <item name="colorOnSecondary">@color/logo_font</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SemperTibi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SemperTibi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SemperTibi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CalendarViewDefaultText">
        <item name="android:textColor">@color/anti_flash_white</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundColor">@color/lotus_blue</item>
    </style>
</resources>